@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}
@if (Session["username"] != null)
{
    <h1>welcome @Session["username"].ToString()</h1>
}
<h2>Index</h2>

<h3><a href="product/create">create new</a></h3>

<table class="table table-bordered table-striped">
    <tr>
      
        <th>Customer Name</th>
        <th>Customer Description</th>
        
        
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td><a href="@Url.Action("Edit","Product",new {@id=@Model.Rows[i][0]})">Edit</a></td>
            <td><a href="@Url.Action("Delete","Product",new {@id=@Model.Rows[i][0]})">Delete</a></td>
        </tr>
    }
    

</table>

